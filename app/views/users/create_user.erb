<% if flash.has?(:new_user_error) %>
  <%= flash[:new_user_error] %>
<% end %>
<h1>Sign Up for an Account</h1>
<p>Please enter your details below to create a new user account</p>
<form method="POST" action="/signup">
  <label><strong>Username:</strong><input type = "text" name="username" id="username"><br><br>
  <label><strong>Email:</strong><input type="text" name="email" id="email"><br><br>
  <label><strong>Password:</strong><input type="password" name="password" id="password"><br><br>

  <button type="submit" value="Create Account">Create Account</button>
</form>
